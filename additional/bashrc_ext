export IDEA_VM_OPTIONS=$HOME/.idea.vmoptions

export JAVA_DIR=/usr/local/java
export VM32=$JAVA_DIR/jdk1.6.0_21_i586
export VM64=$JAVA_DIR/jdk1.6.0_21_x64

export IDEA_JDK=$VM64
export JDK_HOME=$VM64

export M2_HOME=$JAVA_DIR/apache-maven-2.2.1
export GROOVY_HOME=$JAVA_DIR/groovy-1.6.0
export GRAILS_HOME=$JAVA_DIR/grails-1.3.5
export GWT_HOME=$JAVA_DIR/gwt-linux-1.6.4
export ROO=$JAVA_DIR/spring-roo-1.0.0.RC1
export ANDROID_HOME=$JAVA_DIR/android-sdk-linux_86
export SBT_HOME=$JAVA_DIR/sbt-0.7.4
export SCALA_HOME=$JAVA_DIR/scala-2.8.1.RC4

export JAVA_HOME=$JDK_HOME
export ANDROID_SDK_HOME=$ANDROID_HOME

export PATH=$JDK_HOME/bin:$GROOVY_HOME/bin:$M2_HOME/bin:$GRAILS_HOME/bin:$ROO/bin:$ANDROID_HOME/tools:$SBT_HOME/bin:$SCALA_HOME/bin:$PATH

export JAVA_OPTS="-server -Xms192m -Xmx512m -XX:MaxPermSize=128m -XX:+UnlockExperimentalVMOptions -XX:CompileThreshold=30000 -XX:ParallelGCThreads=4 -XX:+UseConcMarkSweepGC -XX:+UseParNewGC -XX:SurvivorRatio=8 -XX:TargetSurvivorRatio=90 -XX:MaxTenuringThreshold=15 -XX:+UseFastAccessorMethods -XX:+AggressiveOpts -XX:+UseBiasedLocking -XX:+DoEscapeAnalysis -XX:+Inline -XX:+UseCompressedOops"

export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

alias emacs=xemacs

